<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:visibility="visible">

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/showMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/background_left"
        android:padding="8dp"
        android:text="Hello"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/profilepic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Seenor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/showMessage"
        app:layout_constraintStart_toStartOf="@+id/showMessage"
        app:layout_constraintTop_toBottomOf="@+id/showMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>